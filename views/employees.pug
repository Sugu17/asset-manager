extends layout.pug

block content 
  div.p-3
    table.table.table-striped#employee-table
      thead 
        tr 
          th(scope="col") Name
          th(scope="col") Active
          th(scope="col") Edit 
      tbody 
          each value of employees
            tr 
              td #{value.name}
              td #{value.isActive}
              td Edit
    form.d-flex.flex-column.gap-4(action="/employees", method="post")
      div
        label.form-label(for="name") Employee Name
        input.form-control(type="text", name="name",id="name") 
      div.d-flex.gap-3
        input.form-check-input(type="checkbox", name="active",id="isActive")
        label.form-check-label(for="isActive") Active Employee?
      button.btn.btn-primary.align-self-center.w-50(type="submit") Add

block scripts 
  script(src="/javascripts/jquery/jquery.js") 
  script(src="/javascripts/datatables/datatables.js")
  script.
    let table=new DataTable("#employee-table",{});
    
block stylesheets 
  link(rel="stylesheet", href="/stylesheets/datatables.css")